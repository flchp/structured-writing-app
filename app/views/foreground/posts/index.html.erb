<div class="col-md-12">
  <table class="table table-hover">
    <thead>
    <td>发表时间</td>
    <td>文章题目</td>
    <td>作者</td>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.created_at.strftime("%Y-%b-%d   %H:%M") %>
        </td>
        <td>
          <%= link_to(post.title, foreground_post_path(post)) %>
        </td>
        <td>
          <%= post.user.email %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
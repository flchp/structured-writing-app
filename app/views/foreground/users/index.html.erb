<div class="col-md-12">
  <table class="table table-hover">
    <thead>
    <td>注册时间</td>
    <td>作者</td>
    <td>文章量</td>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.created_at.strftime("%Y-%b-%d   %H:%M") %>
        </td>
        <td>
          <%= link_to(user.email, foreground_user_path(user)) %>
        </td>
        <td>
          <%= user.posts.count %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>